@model Schad_MVCInvoiceApp.Entitades.CustomerType

@{
    ViewBag.Title = "Create Customer Type";
}

<h2 class="viewbag-style"><i>@ViewBag.Title</i></h2>
<div class="container">
    @using (Html.BeginForm("Create", "CustomerType", FormMethod.Post))
    {
        <div class="row">
            <div class="form-group col-md-12">
                @Html.LabelFor(model => model.Description)
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Write new customer type." } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-12">
                <input type="submit" value="Guardar Tipo" class="btn btn-success btn-lg btn-block" />
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Atras", "Index", "CustomerType", new { id = "btnAtras" }, new { @class = "btn btn-danger" })
    </div>
</div>

